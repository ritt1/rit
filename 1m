class Node: 
    def __init__(self, data): 
        self.data = data 
        self.left = None 
        self.right = None 
 
def create_node(data): 
    return Node(data) 
 
def pre_order(root): 
    if root is not None: 
        print(root.data, end=' ') 
        pre_order(root.left) 
        pre_order(root.right) 
 
def in_order(root): 
    if root is not None: 
        in_order(root.left) 
        print(root.data, end=' ') 
        in_order(root.right) 
 
def post_order(root): 
    if root is not None: 
        post_order(root.left) 
        post_order(root.right) 
        print(root.data, end=' ') 
 
# Constructing the binary tree 
#        1 
#       / \ 
#      2   3 
#     / \ 
#    4   5 
root = create_node(1) 
root.left = create_node(2) 
root.right = create_node(3) 
root.left.left = create_node(4) 
root.left.right = create_node(5) 
print("Pre-order traversal: ", end='') 
pre_order(root) 
print() 
print("In-order traversal: ", end='') 
in_order(root) 
print() 
print("Post-order traversal: ", end='') 
post_order(root) 
print()
