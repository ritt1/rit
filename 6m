class HashTable: 
    def __init__(self, size): 
        self.size = size 
        self.table = [-1] * size 
 
    def hash_function(self, key): 
        return key % self.size 
 
    def insert(self, key): 
        index = self.hash_function(key) 
        start_index = index 
 
        while self.table[index] != -1 and self.table[index] != "DEL": 
            index = (index + 1) % self.size 
            if index == start_index: 
                print("Hash table is full! Cannot insert key:", key) 
                return 
        self.table[index] = key 
        print(f"{key} inserted at index {index}.") 
 
    def search(self, key): 
        index = self.hash_function(key) 
        start_index = index 
 
        while self.table[index] != -1: 
            if self.table[index] == key: 
                print(f"{key} found at index {index}.") 
                return index 
            index = (index + 1) % self.size 
            if index == start_index: 
                break 
        print(f"{key} not found in the table.") 
        return -1 
 
    def delete(self, key): 
        index = self.search(key) 
        if index != -1: 
            self.table[index] = "DEL" 
            print(f"{key} deleted from index {index}.") 
 
    def display(self): 
        print("\nCurrent Hash Table:") 
        for i, val in enumerate(self.table): 
            print(f"Index {i}: {val}") 
        print() 
 
def main(): 
    size = int(input("Enter the size of the hash table: ")) 
    ht = HashTable(size) 
 
    while True: 
        print("\nMenu:") 
        print("1. Insert a key") 
        print("2. Search for a key") 
        print("3. Delete a key") 
        print("4. Display hash table") 
        print("5. Exit") 
 
        choice = input("Enter your choice (1-5): ") 
 
        if choice == '1': 
            key = int(input("Enter the key to insert: ")) 
            ht.insert(key) 
        elif choice == '2': 
            key = int(input("Enter the key to search: ")) 
            ht.search(key) 
        elif choice == '3': 
            key = int(input("Enter the key to delete: ")) 
            ht.delete(key) 
        elif choice == '4': 
            ht.display() 
        elif choice == '5': 
            print("Exiting program.") 
            break 
        else: 
            print("Invalid choice. Please try again.") 
 
if __name__ == "__main__": 
    main()
